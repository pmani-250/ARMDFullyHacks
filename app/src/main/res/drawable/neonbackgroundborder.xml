<!-- edittext_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer for solid white background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- White color -->
            <!-- Border radius -->
            <corners android:radius="10dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
    <!-- Layer for blurred stroke -->
    <item>
        <shape android:shape="rectangle">
            <!-- Apply blur effect to the stroke -->
            <stroke
                android:width="4dp"
                android:color="#96F3FB"/> <!-- Adjust blur radius as needed -->
            <!-- Border radius -->
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
</layer-list>
