<!-- edittext_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer for blurred stroke -->
    <item>
        <shape android:shape="rectangle">
            <!-- Apply blur effect to the stroke -->
            <stroke
                android:width="4dp"
                android:color="#96F3FB"
                android:blurRadius="4dp" /> <!-- Adjust blur radius as needed -->
            <!-- Border radius -->
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
    <!-- Layer for solid background -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <!-- Background color -->
            <!-- Border radius -->
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
</layer-list>
